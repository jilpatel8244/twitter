<!-- tweet generate modal -->
<div id="defaultModal" tabindex="-1" class="hidden  z-[1]  absolute inset-0 items-center w-full md:inset-0 h-full pt-44  md:h-screen">
  <div class="fixed pt-44 z-[9]  left-[50%] w-full flex justify-center -translate-x-[53%] -translate-y-[50%] ">
    <!-- tweet generate content -->
    <div class=" p-4 bg-white rounded-lg shadow-2xl dark:bg-white sm:p-5 max-w-[700px]  w-[592px]">
      <!-- tweet generate header -->
      <div class="justify-between flex items-center rounded-t  ">
        <p id="close" data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900  rounded-full text-sm p-1.5  inline-flex items-center  " data-modal-toggle="defaultModal" id="close">
          <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </p>
        <p data-modal-target="select-modal" data-modal-toggle="select-modal" id="drafts" class="text-lg hover:bg-opacity-20 rounded-3xl cursor-pointer p-2.5 w-28 px-8 hover:bg-[#8fa2c4] font-semibold text-blue-900 dark:text-blue-500 select-none">
          Drafts
        </p>
      </div>




      <!-- tweet generate body -->
      <form id="tweet" name="tweet" enctype="multipart/form-data">
        <input type="hidden" id="tweetId" name="tweetId">
        <div class="flex">
          <div class="m-2 w-10 py-1">
            <img id="profile_img" class="inline-block h-10 w-10 rounded-full select-none " src="" alt="">
          </div>
          <div class="flex-1 px-2 pt-2 mt-2">
            <pre style="word-wrap: break-word; overflow-wrap: break-word; white-space: normal;"
            class="max-w-80 text-balance overflow-hidden bg-transparent text-gray-700 outline-none font-[Trebuchet MS, sans-serif] font-bold text-xl h-28 font-serif  w-full" placeholder="What is happening?!" name="content" id="content" contenteditable="true" ></pre>
            <br>
            <div id="images" class="inline-flex"></div>
          </div>
        </div>
        <!--middle creat tweet below icons-->
        <div class="flex border-t-2 -mb-6">
          <div class="w-10 "></div>

          <div class="w-64 px-2">

            <div class="flex items-center -mb-2">
              <div class="flex-1 text-center px-1 py-1 m-2">
                <label for="media">
                  <a class="mt-1 group flex items-center text-blue-400 px-2 py-2 text-base leading-6 font-medium rounded-full hover:bg-opacity-20 hover:bg-[#8fa2c4] hover:text-blue-600">
                    <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                      <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                      </path>
                    </svg>
                  </a>
                </label>
                <input type="file" name="media" id="media" accept="image/png, image/gif, image/jpeg, image/jpg, image/webp" class="hidden" >
              </div>

              <div class="flex-1 text-center py-2 m-2">
                <a href="#" class="mt-1 group flex items-center text-blue-400 px-1 py-1 text-base leading-6 font-medium rounded-full hover:bg-opacity-20 hover:bg-[#8fa2c4] hover:text-blue-600">
                  <img src="/assets/gif.png" alt="" srcset="" height="50px" width="50px" class="outline-1 select-none">
                </a>
              </div>

              <div class="flex-1 text-center py-2 m-2">
                <a href="#" class="mt-1 group flex items-center text-blue-400 px-2 py-2 text-base leading-6 font-medium rounded-full hover:bg-opacity-20 hover:bg-[#8fa2c4] hover:text-blue-600">
                  <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                    </path>
                  </svg>
                </a>
              </div>

              <div class="flex-1 text-center py-2 m-2">
                <a id="emojiBtn" data-modal-target="emojiPicker" data-modal-toggle="emojiPicker"  class="mt-1 group flex items-center text-blue-400 px-2 py-2 text-base leading-6 font-medium rounded-full hover:bg-opacity-20 hover:bg-[#8fa2c4] hover:text-blue-600">
                  <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                    </path>
                  </svg>
                </a>
                <div id="emojiPicker">

                </div>
                
              </div>
              <div id="removeEmoji" style="display: none;z-index: 10; position: absolute; top:0;left:0;width: 100vw;height: 100vh;">

              </div>
            </div>
          </div>
          <script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js"></script>
          <div class="flex-1 ">
            <p class="bg-blue-400 opacity-25 hover:bg-blue-500 mt-5 text-white font-bold py-2 px-8 rounded-full mr-8 float-right select-none" id="post">
              Post
            </p>
          </div>
        </div>
      </form>
    </div>

</div>
</div>



<div id="popup-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0  right-0 left-0 z-50 justify-center  items-center w-full md:inset-0 backdrop-blur-sm h-full pt-44 max-h-full">
<div class=" p-4  mx-auto max-w-fit  max-h-screen">
  <div class=" bg-white rounded-2xl shadow-2xl">
    <div class="p-4 md:p-5 ">

      <h3 class=" text-lg font-normal text-black dark:text-black">Save post?</h3>
      <p class="text-gray-700 mb-5">You can save this to send later from your drafts. </p>
      <div class="text-center  flex items-center flex-col">
        <p data-modal-hide="popup-modal" type="button" class="py-2.5 w-[25rem] text-center font-medium focus:outline-none bg-black rounded-2xl border  hover:bg-gray-900 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-100  text-white select-none" id="save">
          Save
        </p>
        <p data-modal-hide="popup-modal" type="button" class="py-2.5 w-[25rem] text-center font-medium text-gray-900 focus:outline-none bg-white rounded-2xl border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-white dark:text-black dark:border-gray-600 dark:hover:text-gray-900 dark:hover:bg-gray-100 select-none" id="discard">Discard</p>
      </div>
    </div>
  </div>
</div>
</div>

<!--draft modal -->
<div id="select-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed  z-50 justify-center items-center w-full backdrop-blur-sm  md:inset-0 h-[calc(100%-1rem)] pt-25 max-h-full">
<div class=" p-4 w-[40rem] mt-20 mx-auto  max-w-md max-h-full">
  <!-- draft content -->
  <div class=" bg-white rounded-lg shadow-2xl">
    <!-- draft header -->
    <div class="flex items-center justify-between p-4  border-b rounded-t dark:border-gray-600">
      <div class="flex gap-2 ">
        <p class="text-gray-700 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-3xl text-sm h-8 w-8 ms-auto inline-flex justify-center items-center" data-modal-toggle="select-modal" id="closeDraft">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </p>
        <h3 class="text-lg font-semibold text-gray-900">
          Darfts
        </h3>
      </div>
      <div id="edit" class="hidden">
        <p class="py-1 w-[5rem] text-center font-medium focus:outline-none bg-black rounded-2xl border  hover:bg-gray-900 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-100 cursor-pointer text-white select-none" id="editBtn">
          Edit
        </p>
      </div>
    </div>
    <!-- draft body -->
    <div class="p-4 md:p-5">

      <ul class="space-y-4 mb-4" id='draftList'>
        <li>
          <p class="text-black text-2xl">Hold that thought</p>
          <p class="text-gray-800"> Not ready to post just yet? Save it to your drafts or schedule it for later. </p>
        </li>
      </ul>
      <div id="deleteBlock" class="hidden">
        <div class="flex justify-between border-t">
          <div class=" my-2">
            <p class="py-1 w-[6rem] text-center font-medium focus:outline-none rounded-2xl  hover:bg-blue-100 hover:text-blue-600 focus:z-10 focus:ring-4 focus:ring-gray-100 cursor-pointer text-blue-500 select-none" id="selectAll">Select all</p>
          </div>
          <div class="my-2">
            <button id="delete" data-modal-target="delete-modal" data-modal-toggle="delete-modal" class="py-1 w-[5rem] text-center font-medium focus:outline-none rounded-2xl  focus:z-10 focus:ring-4 focus:ring-gray-100 disabled:opacity-70 text-red-600 select-none" disabled>Delete</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<div id="delete-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center  items-center w-full backdrop-blur-sm md:inset-0 h-full pt-44 max-h-full">
<div class=" p-4  mx-auto max-w-fit  max-h-screen">
  <div class=" bg-white rounded-2xl shadow-2xl">
    <div class="p-4 md:p-5 ">
      <h3 class=" text-lg font-normal text-black dark:text-black">Discard unsent posts</h3>
      <p class="text-gray-700 mb-5">This can’t be undone and you’ll lose your unsent posts. </p>
      <div class="text-center  flex items-center flex-col">
        <p data-modal-hide="delete-model" class="py-2.5 w-[25rem] text-center font-medium focus:outline-none bg-red-600 rounded-2xl border  hover:bg-red-900 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-100  text-white select-none cursor-pointer" id="finalDelete">
          Delete
        </p>
        <p data-modal-hide="delete-modal" class="py-2.5 w-[25rem] text-center font-medium text-gray-900 focus:outline-none bg-white rounded-2xl border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-white dark:text-black dark:border-gray-600 dark:hover:text-gray-900 dark:hover:bg-gray-100 select-none cursor-pointer" id="deleteCancle">Cancle</p>
      </div>
    </div>
  </div>
</div>
</div>