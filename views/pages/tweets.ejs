<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>X</title>
</head>

<body>
  <div class="p-relative " style="background-color: white">
    <div class="flex">

      <header class=" h-6 py-4 h-auto ml-20">
        <!-- Side Navbar (left side) -->
        <%- include('../partials/sidebar.ejs') %>
      </header>

      <main role="main">
        <div class="flex" style="width: 990px;">


          <div id="tweet_con" class="mr-8 ml-10">

          </div>
          <div class="ml-10">

            <%- include('../partials/aside.ejs')%>
          </div>
        </div>
      </main>

      <aside class=" h-12 py-4 h-auto">
        <!-- right sidebar -->
      </aside>
    </div>
  </div>



  <style>
    .overflow-y-auto::-webkit-scrollbar,
    .overflow-y-scroll::-webkit-scrollbar,
    .overflow-x-auto::-webkit-scrollbar,
    .overflow-x::-webkit-scrollbar,
    .overflow-x-scroll::-webkit-scrollbar,
    .overflow-y::-webkit-scrollbar,
    body::-webkit-scrollbar {
      display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    .overflow-y-auto,
    .overflow-y-scroll,
    .overflow-x-auto,
    .overflow-x,
    .overflow-x-scroll,
    .overflow-y,
    body {
      -ms-overflow-style: none;
      /* IE and Edge */
      scrollbar-width: none;
      /* Firefox */
    }

    .bg-dim-700 {
      --bg-opacity: 1;
      background-color: white;
    }

    html,
    body {
      margin: 0;
      background-color: white;
    }

    svg.paint-icon {
      fill: currentcolor;
    }
  </style>
  <script>


    function gettweet() {
      let tweet = "";
      tweet += `<div id=${"mihir"}>
                <div class="flex flex-shrink-0 p-4 pb-0">
                <a href="#" class="flex-shrink-0 group block">
                <div class="flex items-center">
                <div>
                 <img class="inline-block h-10 w-10 rounded-full"
                  src="https://pbs.twimg.com/profile_images/1121328878142853120/e-rpjoJi_bigger.png" alt="" />
                </div>
                <div class="ml-3">
                  <p class="text-base leading-6 font-medium text-black">
                       ${"Name"}
                          <span
                          class="text-sm leading-5 font-medium text-gray-400 group-hover:text-gray-300 transition ease-in-out duration-150">
                          @'${"username"}'. 16 April
                         </span>
                  </p>
                </div>
                </div>
                </a>
                </div>
                <div class="pl-16">
                <p class="text-base width-auto font-medium text-black flex-shrink">
                 ${"this is my tweeet content"}
                 </p>`

      //check media url

      if (1) {
        tweet += ` <div class="md:flex-shrink pr-6 pt-3">
                  <div class="md:flex-shrink pr-6 pt-3">
                  <div class="bg-cover bg-no-repeat bg-center rounded-lg w-full h-64" style="height: 200px; background-image: url(https://images.unsplash.com/photo-1556740738-b6a63e27c4df?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=448&amp;q=80);">
                  <img class="opacity-0 w-full h-full"
                            src="https://images.unsplash.com/photo-1556740738-b6a63e27c4df?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=448&amp;q=80"
                            alt="">
                    </div>
                </div>
             `
      }

      tweet += `<div class="flex">
                <div class="w-full">
                <div class="flex items-center">
                <!-- comment span tag -->
                <div class="flex-1 text-center">
                <span class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full  hover:text-blue-300">
                <svg class="text-center h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
                </path>
                </svg>
                </span>
                </div>
                <!-- retweet span tag -->
                <div class="flex-1 text-center py-2 m-2">
                <span class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full  hover:text-blue-300">
                <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path> </svg>
                </span> </div>`







      tweet += `
            <div class="flex-1 text-center py-2 m-2">
              <span class="w-12 mt-1 group flex items-center px-3 py-2 text-base leading-6 font-medium rounded-full  hover:text-red-300">`


      //tweet like
      if (1) {


        tweet += `<svg class="text-center h-7 w-6 fill-red-600 text-red-600 like_${"like id"} "fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"
        onclick="likeHandler('likeid')">
        <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
        </path>
        </svg>`

      }

      else {
        tweet += ` <svg class="text-center h-7 w-6 text-gray-500 like_${"like id"}" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" onclick="likeHandler('${"like id"}')">
                  <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
                  </path>
                  </svg>
                                              `

      }



      tweet += ` </span > </div >
      <div class="flex-1 text-center py-2 m-2">
       <span class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full  hover:text-blue-300">
        <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
        <path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12">
        </path> </svg></span></div>
        <div class="flex-1 text-center py-2 m-2 ">
        <span class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full  hover:text-blue-300">`




      // < !--bookmark span tag-- >



      //nookmark is available then
      if (1) {
        tweet += `<svg class="text-center h-7 w-6 fill-blue-300 text-blue-800 bookmark_${"tweet id"}" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"
          onclick="bookmarkHandler('${"tweet id"}')">
          <path
          d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293h3.172a1 1 0 00.707-.293l2.414-2.414a1 1 0 01.707-.293H20">
          </path>
          </svg>`
      }
      else {

        `<svg class="text-center h-7 w-6 bookmark_${"tweet_id"}" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" onclick="bookmarkHandler('${"tweet_id"}')">
        <path d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293h3.172a1 1 0 00.707-.293l2.414-2.414a1 1 0 01.707-.293H20">
        </path>
        </svg>`

      }

      tweet += `</span > </div >`
      tweet += `<input type="hidden" name="tweet_id" value="${"tweet id"} ">`
      return tweet;
    }





    let tweet = gettweet()

    let div = document.getElementById("tweet_con");

    div.innerHTML = tweet;

  </script>
</body>

</html>