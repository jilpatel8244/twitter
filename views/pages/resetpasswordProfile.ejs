<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>

  <body>
    <div class="mt-48">
      <div
        class="flex mx-auto max-w-md mt-10 rounded-lg flex-col justify-center px-6 py-12 lg:px-8"
      >
        <div
          class="flex h-full flex-wrap items-center justify-center lg:justify-between"
        >
          <div
            class="w-full max-w-sm mx-auto ovegit lab recoveryrflow-hidden bg-white rounded-lg shadow-md"
          >
            <div class="px-6 py-4">
              <div class="flex justify-center mx-auto">
                <img
                  class="w-auto h-7 sm:h-8"
                  src="/assests/X-Logo.png"
                  alt=""
                />
              </div>

              <form>
                <p class="mt-1 text-center text-black">Enter Old Password</p>

                <div class="w-full mt-4">
                  <input
                    class="block w-full px-4 py-2 mt-2 text-gray-800 placeholder-gray-500 bg-white border rounded-lg focus:border-black focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-gray-300"
                    type="password"
                    id="oldpassword"
                    name="oldpassword"
                    placeholder="oldpassword"
                    aria-label="oldpassword"
                  />
                </div>

                <p class="mt-4 text-center text-black">Enter New Password</p>
                <div class="w-full mt-4">
                  <input
                    class="block w-full px-4 py-2 mt-2 text-gray-800 placeholder-gray-500 bg-white border rounded-lg focus:border-black focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-gray-300"
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Password"
                    aria-label="password"
                  />
                </div>

                <div class="w-full mt-4">
                  <input
                    class="block w-full px-4 py-2 mt-2 text-gray-800 placeholder-gray-500 bg-white border rounded-lg focus:border-black k focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-gray-300"
                    input
                    type="password"
                    id="confirm_password"
                    name="confirm_password"
                    placeholder="Confirm Password"
                    aria-label="confirm_password"
                    onkeyup="validate_password()"
                  />
                </div>
                <span id="wrong_pass_alert"></span><br />
                <span id="insertpassword"></span>
                <div class="flex items-center justify-between mt-4">
                  <p
                    class="px-6 py-2 text-sm font-medium cursor-pointer tracking-wide text-white capitalize transition-colors duration-300 transform bg-black rounded-lg hover:bg-gray-900 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50"
                    id="confirm"
                    onclick="forgot()"
                  >
                    Confirm
                  </p>

                  <div>
                    <input
                      type="checkbox"
                      id="show_pass"
                      name="show_pass"
                      onclick="showPassword()"
                      class="mx-1 cursor-pointer"
                    />
                    <label for="show_pass"> Show Password</label>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      function showPassword() {
        let password = document.getElementById("password");
        if (password.type === "password") {
          password.type = "text";
        } else {
          password.type = "password";
        }

        let confirmPassword = document.getElementById("confirm_password");
        if (confirmPassword.type === "password") {
          confirmPassword.type = "text";
        } else {
          confirmPassword.type = "password";
        }
      }

      async function forgot() {
        async function set_password(oldpass, password, newpassword) {
          let url =
            window.location.origin + "git lab recovery/resetprofilepassword";
          let data1 = {
            inputOldpassword: oldpassword,
            inputPassword: password,
            inputNewpassword: newpassword,
          };
          console.log(data1);
          let result_validate = await fetch(url, {
            method: "post",
            body: JSON.stringify(data1),
            headers: { "Content-Type": "application/json" },
          });

          let result = await result_validate.json();
          console.log(result);

          return result;
        }

        let inputPassword = document.getElementById("password").value;

        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);

        let inputEmail = urlParams.get("email").toString();
        let activationCode = urlParams.get("activecode").toString();
        console.log(inputEmail);
        console.log(activationCode);

        let result = await set_password(
          inputEmail,
          inputPassword,
          activationCode
        );

        console.log(result);

        if (result.isvalidate_user == false) {
          alert(" not updated");
        } else {
          window.location.href = window.origin + "/login";
        }
      }
    </script>
  </body>
  <script type="text/javascript">
    let inputOldpassword = document.getElementById("oldpassword").value;
    let inputPassword = document.getElementById("password").value;
    let inputNewpassword = document.getElementById("confirm_password").value;

    function validate_password() {
      if (inputPassword != inputNewpassword) {
        document.getElementById("wrong_pass_alert").style.color = "red";
        document.getElementById("wrong_pass_alert").innerHTML =
          "Use same password";
        document.getElementById("confirm").disabled = true;
        document.getElementById("confirm").style.opacity = 0.4;
        return false;
      } else {
        document.getElementById("wrong_pass_alert").style.color = "green";

        document.getElementById("wrong_pass_alert").innerHTML =
          "Password Matched";
        document.getElementById("confirm").disabled = false;
        document.getElementById("confirm").style.opacity = 1;
        return true;
      }
    }

    function showPassword() {
      let password = document.getElementById("password");
      if (password.type === "password") {
        password.type = "text";
      } else {
        password.type = "password";
      }

      let confirmPassword = document.getElementById("confirm_password");
      if (confirmPassword.type === "password") {
        confirmPassword.type = "text";
      } else {
        confirmPassword.type = "password";
      }
    }

    async function forgot() {
      validate_password();
      let result = await set_password(
        inputOldpassword,
        inputPassword,
        inputNewpassword
      );

      console.log(result);

      if (result.success == false) {
        alert("new password can not be same as old password");
      } else {
        window.location.href = window.origin + "/login";
      }
    }

    async function set_password(oldpassword, password, newpassword) {
      let url = window.location.origin + "/profilepasswordreset";
      let data = {
        inputOldpassword: oldpassword,
        inputPassword: password,
        inputNewpassword: newpassword,
      };
      let result_validate = await fetch(url, {
        method: "post",
        body: JSON.stringify(data),
        headers: { "Content-Type": "application/json" },
      });

      let result = await result_validate.json();
      console.log(result);

      return result;
    }
  </script>
</html>
