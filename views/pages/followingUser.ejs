<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Followers</title>
    <link rel="stylesheet" href="/css/output.css" />

    <style>
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .follower-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
      }

      .follower-item img {
        width: 50px;
        height: 50px;
        border-radius: 50%; 
        margin-right: 20px;
      }

      .follower-details {
        flex: 1;
      }

      .follower-details h2 {
        margin: 0;
        font-size: 16px;
      }

      .follower-details p {
        margin: 5px 0;
        font-size: 14px;
        color: #888;
      }
    </style>
  </head>
  <body>
    <div class="h-screen" id="main" style="background-color: white">
      <div class="flex justify-center">
        <header class="py-4 h-auto">
          <!-- Side Navbar (left side) -->
          <%- include('../partials/sidebar.ejs') %>
        </header>
        <main role="main">
          <div class="flex" style="width: 990px">
            <section
              class="w-3/5 border border-gray-200"
              style="max-width: 600px"
            >
            <div class="flex justify-start">
                <div class="px-4 py-2 mx-2">
                    <p onclick="history.back()"
                        class=" text-2xl font-medium rounded-full text-blue-400 hover:bg-whitesmoke-800 hover:text-blue-300 float-right">
                        <svg class="m-2 h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                            <g>
                                <path
                                    d="M20 11H7.414l4.293-4.293c.39-.39.39-1.023 0-1.414s-1.023-.39-1.414 0l-6 6c-.39.39-.39 1.023 0 1.414l6 6c.195.195.45.293.707.293s.512-.098.707-.293c.39-.39.39-1.023 0-1.414L7.414 13H20c.553 0 1-.447 1-1s-.447-1-1-1z">
                                </path>
                            </g>
                        </svg>
                    </p>
                </div>
                <div class="mx-2 my-3">
                    <h2 class="mb-0 text-xl font-bold text-black">
                       Following
                    </h2>
                  
                </div>
            </div>
              <div class="container">
                <% if(followingData.length){ %>
                <% followingData.forEach(follower => { %>
                <div class="follower-item">
                    <a href="/explore/profile?id=<%=follower.id%>"> <img src="/uploads/<%= follower.image %>" /></a>
                  <div class="follower-details">
                    <h2> <a href="/explore/profile?id=<%=follower.id%>"><%= follower.user_name %></a></h2>
                    <p><a href="/explore/profile?id=<%=follower.id%>">@<%= follower.usernameoffollowing %></a></p>
                  </div>
                </div>
                <% }); %>
                <% } else { %>
                    <div class="w-3/5" style="margin: 50px auto;">
                        <div class="mb-3">
                            <h2 class="font-bold text-3xl">Be in the Know</h2>
                        </div>
                        <div class="mb-3">
                            <p style="color: rgb(83, 100, 113);">Following account is an easy way to curate yput timeline and know what's happening wiht the people you're 
                                interested in.</p>
                        </div>
                    </div>
                 <% } %>
              </div>
            </section>

            <!-- right sidebar -->
            <%- include('../partials/aside.ejs')%>
          </div>
        </main>
      </div>
    </div>

    <%- include('../partials/aside.ejs')%>
  </body>
</html>
